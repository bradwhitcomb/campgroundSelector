<% include ../partials/header %>

<div class="container">
	<div class="row">
		<div class="col-md-3">
		<p class ="lead">AT Campgrounds</p>
		<div class="list-group">
			<li class="list-group-item active">infornation1</li>
			<li class="list-group-item">infornation2</li>
			<li class="list-group-item">infornation3</li>
		</div>

	</div>
	<div class="col-md-9">
		<div class="thumbnail">
		<img class="img-responsive" src= "<%=campgrounds.image%>">
		<div class="caption-full" >
			<h4 class="pull-right">$9.00/night</h4>
			<h4><a href="<%=campgrounds.name%>"></a><%=campgrounds.name%></h4>
			<p></p>
			<p><%=campgrounds.description%></p>
		</div>
		
	</div>
	<div class="well">
		<div class="text-right">
			<a class="btn btn-success"  href="/campgrounds/<%=campgrounds._id%>/comments/new"> Add New Comment</a>
		</div>
		<hr>
			<% campgrounds.comments.forEach(function(comment){ %>
				<div class="row">
				<div class="col-md-12">
					<strong><%= comment.author %></strong>
					<span class="pull-right">10 days ago</span>
					<p> 
					<strong></strong> - <%= comment.text %> 

				</p>
				</div>
				</div>
				
	 		<% })%>
		</div>
	</div>
</div>	
</div>		

	







<% include ../partials/footer %>
